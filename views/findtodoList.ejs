<!DOCTYPE html>
<head>
  <title>TodoList | Create</title>
  <link rel="stylesheet" href="/static/todoList.css" type="text/css" />
  <link
    href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay"
    crossorigin="anonymous"
  />
</head>
<body>
  <div class="link">
    <a href="/" class="links">Home</a>
  </div>
  <div class="todo-container">
    <h2>To-Do-List Task</h2>
    <ul class="todo-list">
      <% todoTasks.forEach(details => { %>
      <li class="todo-list-item">
        <div class="todo-list-item-name"><%= details.title %></div>
        <div class="todo-list-item-name"><%= details.description %></div>
        <div class="todo-list-item-name"><%= details.status %></div>
        <a href="/edit/<%= details._id %>" class="edit">
          <span>Edit</span>
        </a>
        <a href="/remove/<%= details._id %>" class="remove">
          <span>Delete</span>
        </a>
      </li>
      <% }) %>
    </ul>
  </div>
  <div class="link">
    <a href="/create" class="links">Create Todo</a>
  </div>
</body>
